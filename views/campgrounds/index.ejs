<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to the campgrounds!</h1>
      <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new campground</a>
      </p>
    </div>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap">
    <% campgrounds.forEach(function(site){ %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <a href="/campgrounds/<%= site._id %>"><img id="indeximg" src=<%=site.image %> alt="<%=site.name%>" /></a>
      </div>
      <div class="caption">
        <h4><%= site.name %></h4>
      </div>
      <p>
        <a href="/campgrounds/<%= site._id %>" class="btn btn-primary">
          More Info
        </a>
      </p>
    </div>
    <% }) %>
  </div>
</div>

<% include ../partials/footer %>
