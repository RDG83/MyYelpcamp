<% include ../partials/header %>
<div class="container">
  <h1 style="text-align: center">Add a new campground</h1>
  <div class="row" style="width: 30%; margin: 20px auto">
    <form action="/campgrounds" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="newcampground" placeholder="name" />
      </div>
      <div class="form-group">
        <input class="form-control" type="number" name="newprice" placeholder="price" min="0.01" step="0.01" />
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="newimg" placeholder="image URL" />
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="description" placeholder="description" />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
      </div>
    </form>
    <a href="/campgrounds">Back to campgrounds</a>
  </div>
</div>

<% include ../partials/footer %>
